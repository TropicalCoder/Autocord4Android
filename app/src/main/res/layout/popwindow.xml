<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:background="?attr/colorPrimaryDark"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/labelAdjust"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:padding="4dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="24dp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:text="@string/auto_set"
        android:gravity="end"
        android:textAlignment="gravity"
        android:visibility="visible"
        android:background="?attr/colorPrimaryDark"
        android:textColor="@color/colorTealAccent2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/labelInstructions"
        app:layout_constraintEnd_toStartOf="@+id/imageBtnAutoOff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ImageButton
        android:id="@+id/imageBtnAutoOn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:src="@drawable/ic_adjust"
        android:background="@drawable/ic_round_background"
        android:tint="?attr/colorAccent"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:elevation="0dp"
        android:onClick="onToggleAuto"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        android:gravity="bottom"
        app:layout_constraintTop_toTopOf="@+id/labelAdjust"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/labelAdjust"
        android:contentDescription="@string/auto_set" />

    <ImageButton
        android:id="@+id/imageBtnAutoOff"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:src="@drawable/ic_cancel"
        android:background="@drawable/ic_round_background"
        android:tint="?attr/colorAccent"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:elevation="0dp"
        android:onClick="onToggleAuto"
        android:visibility="invisible"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        android:gravity="bottom"
        app:layout_constraintTop_toTopOf="@+id/labelAdjust"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/labelAdjust"
        android:contentDescription="@string/cancelauto" />

    <TextView
        android:id="@+id/labelInstructions"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:padding="4dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="24dp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:text="@string/triggerparams"
        android:visibility="visible"
        android:background="?attr/colorPrimaryDark"
        android:textColor="@color/colorTealAccent2"
        app:layout_constraintBottom_toTopOf="@+id/labelSeekDB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/labelSeekDB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:text="@string/setdb"
        android:textAlignment="center"
        android:visibility="visible"
        android:background="?attr/colorPrimaryDark"
        android:textColor="@color/colorTealAccent2"
        app:layout_constraintBottom_toTopOf="@+id/seekDB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <SeekBar
        android:id="@+id/seekDB"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintBottom_toTopOf="@+id/labelSeekMinFreq"
        app:layout_constraintStart_toStartOf="parent"
        android:background="?attr/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/labelSeekMinFreq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:text="@string/setminfreq"
        android:textAlignment="center"
        android:visibility="visible"
        android:background="?attr/colorPrimaryDark"
        android:textColor="@color/colorTealAccent2"
        app:layout_constraintBottom_toTopOf="@+id/seekMinFreq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <SeekBar
        android:id="@+id/seekMinFreq"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintBottom_toTopOf="@+id/labelSeekMaxFreq"
        app:layout_constraintStart_toStartOf="parent"
        android:background="?attr/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/labelSeekMaxFreq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:text="@string/setmaxfreq"
        android:textAlignment="center"
        android:visibility="visible"
        android:background="?attr/colorPrimaryDark"
        android:textColor="@color/colorTealAccent2"
        app:layout_constraintBottom_toTopOf="@+id/seekMaxFreq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <SeekBar
        android:id="@+id/seekMaxFreq"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintBottom_toTopOf="@+id/labelSpacer2"
        app:layout_constraintStart_toStartOf="parent"
        android:background="?attr/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/labelSpacer2"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:padding="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:textAlignment="center"
        android:visibility="visible"
        android:background="?attr/colorPrimaryDark"
        android:textColor="@color/colorTealAccent2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>